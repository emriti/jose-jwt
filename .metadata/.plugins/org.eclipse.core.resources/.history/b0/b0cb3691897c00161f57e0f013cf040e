(function() {
	var app = angular.module('index', [ 'ngCookies' ]);
	app
			.controller(
					'indexController',
					function($http, $cookies) {

						this.username = "";
						this.password = "";
						this.result;

						this.login = function() {

							var tmp = this;
							// var credential = {username : tmp.username,
							// password:
							// tmp.password}

							// console.log(credential);
							// console.log(JSON.stringify(credential));

							var data = $.param({
								username : tmp.username,
								password : tmp.password
							});

							$http(
									{
										method : "POST",
										url : "http://localhost:8080/AuthService/AuthenticationService",
										contentType : "application/json;odata=verbose",
										data : data
									}).success(
									function(data, status, headers, config) {
										console.log(data);
										$http.defaults.headers.common.Authorization = ""Bearer " + data; 
										var expiredDate = new Date(new Date()
												.getTime() + 10000);
										$cookies.put('access_token', data, {
											'expires' : expiredDate
										});
										tmp.result = data;
									}).error(function(message) {
								console.log(message);
							});

							this.reset();
						};

						this.reset = function() {
							this.username = "";
							this.password = "";
							this.result = "";
						};

						this.get = function() {
							var tmp = this;
							$http(
									{
										method : "GET",
										url : "http://localhost:8080/ApiService/ReconService"
									}).success(
									function(data, status, headers, config) {
										tmp.result = data.Test;
									}).error(function(data) {
								console.log(data);
							});
						};

					})
})();