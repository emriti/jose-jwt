(function() {
	var app = angular.module('index', []);
	app.controller('indexController', function($http) {

		this.username = "";
		this.password = "";
		this.result;

		this.login = function() {
			this.reset();
		};

		this.reset = function() {
			this.username = "";
			this.password = "";
			this.result = "";
		};

		this.get = function() {
			$http({
				method : "GET",
				URL : "http://localhost:8080/ApiService/ReconService"
			}).success(function(data, status, headers, config) {
				this.result = data;
			}).error(function(data) {
				console.log(data);
			});
		};

	})
})();